.jm-section {
    position: relative;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-right: 15px;    
    padding-left: 15px;
    display: -webkit-box;
    -webkit-box-align: center;
  
}
.jm-li-title {
    color: #757575;
    font-size: 16px;
}
.jm-type-group{
    position: absolute;
    right: 15px;
    top: 50%;
    margin-top: -15px;
   
}
.jm-calc-wapper {
    height: 28px;
    line-height: 28px;
    display: inline-block;
    position: relative;
    background-color: #fff;
    border-radius: 3px;
    border: 1px solid #d1d0d4;
    font-size: 0;
}
.jm-calc-add, .jm-calc-minus {
    width: 28px;
    display: inline-block;
    height: 28px;
    position: absolute;
    top:0;
}

.jm-calc-wapper> .active:after {
    color: #f3b865;
}
.jm-calc-add{
    right:0;border-left:1px solid #e0e0e0;}
.jm-calc-minus{
    left:0;border-right:1px solid #e0e0e0;}
/*.jm-calc-minus::after:active{
