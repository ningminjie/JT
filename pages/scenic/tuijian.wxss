.all-item{
   position: relative;
    padding-left: 15px;
    display: -webkit-box;
}
.all-lfimg{
    width: 80px;
    height: 80px;
    margin: 10px 10px 10px 0;
    position: relative;
}
.all-lfimg image{
    border-radius: 5px;
    width: 100%;
    height:100%;
}
.all-rtfont{
    -webkit-box-flex: 1;
    padding-top: 10px;
    padding-bottom: 10px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
    padding-right: 15px;
    border-bottom:1px solid #e0e0e0;

}
.all-rtfont .all-bigtitle{
    font-size: 14px;
    margin-bottom: 2px;
    height: 21px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.all-rtfont .all-lowtitle{
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size:12px;
    color: #999;
}
.all-rtfont  .all-icon-font{
  height: 24px;
}

.all-item-quan  .jm-coupon-flag{
    font-size: 10px;
    background-color: #00a5e0;
    padding: 2px 3px;
    color: #fff;
    margin-right: 3px;
    border-radius: 2px;
}
.all-rtfont  .all-icon-font .all-item-price{
      float: right;
}
.all-rtfont   .all-item-price .jm-oldprice{
        color: #666;
    font-size: 10px;
    text-decoration: line-through;
    padding-right: 5px;
}
.all-rtfont   .all-item-price .jm-price{
       color: #f60;
    font-weight: 700;
    font-size:16px;
}
.all-rtfont   .all-item-price .jm-price i{    font-size: 12px;
    font-weight: 400;}