
.page-section{
background-color:#f3f3f3;
}
.searchBar{
    background-color: #f3f3f3;
    padding: 10px 15px;
}
.searchBar .searchInput{
    padding: 5px 5px 5px 30px;
    border-radius: 3px;
    display: block;
    background-color: #fff;
    position: relative;
    color: #a6a6a6;
    font-size: 12px;
    border: 1px solid #eaeaea;
}
.searchBar .searchInput:after{
    font-family: iconfont!important;
    font-size: 18px;
    line-height: 44px;
    font-style: normal;
    -webkit-font-smoothing: antialiased;
    display: block;
    color: rgba(0,0,0,.5);
    color: #c7c7c7;
    content:"\e65c";
    position: absolute;
    left: 8px;
    top: 50%;
    margin-top: -20px;
}
/*------daohang-------*/
.ui-list-navigator{
    background-color: #fff;
    position: relative;
    overflow: hidden;
    zoom:1;
}
.ui-list-navigator .content{
    width: 33.33333333333336%;
    float: left;
    position: relative;
    display: flex;
    align-items: center;
    justify-content:center;
    text-align: center;
    padding: 8px 0;
  
}
.ui-list-navigator .content.active{
    color: #00a5e0;
}
.ui-list-navigator .content.curr{
    color: #666;
}
.ui-list-navigator .content .name{
    margin-top: 5px;
    font-size: 12px;
    display: block;
}
/*liebiao*/
.sceniclists{margin-top: 10px;background: #fff;}
.all-item{
   position: relative;
    padding-left: 15px;
    display: -webkit-box;
}
.all-item navigator{display: -webkit-box;}
.all-lfimg{
    width: 80px;
    height: 80px;
    margin: 10px 10px 10px 0;
    position: relative;
}
.all-lfimg image{
    border-radius: 5px;
    width: 100%;
    height:100%;
}
.all-rtfont{
    -webkit-box-flex: 1;
    padding-top: 10px;
    padding-bottom: 10px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-box-pack: center;
    padding-right: 15px;
    border-bottom:1px solid #e0e0e0;
}
.all-rtfont .all-bigtitle{
    font-size: 14px;
    margin-bottom: 2px;
    height: 21px;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.all-rtfont .all-lowtitle{
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size:12px;
    color: #999;
}
.all-rtfont  .all-icon-font{
  height: 24px;
}
.all-item-quan  .jm-cut-flag{
    font-size: 10px;
    background-color: #f60;
    padding: 2px 3px;
    color: #fff;
    margin-right: 3px;
    border-radius: 2px;
}
.all-item-quan  .jm-coupon-flag{
    font-size: 10px;
    background-color: #00a5e0;
    padding: 2px 3px;
    color: #fff;
    margin-right: 3px;
    border-radius: 2px;
}
.all-rtfont  .all-icon-font .all-item-price{
      float: right;
}
.all-rtfont   .all-item-price .jm-oldprice{
        color: #666;
    font-size: 10px;
    text-decoration: line-through;
    padding-right: 5px;
}
.all-rtfont   .all-item-price .jm-price{
       color: #f60;
    font-weight: 700;
    font-size:16px;
}
.all-rtfont   .all-item-price .jm-price i{    font-size: 12px;
    font-weight: 400;}
                          
